{
    "env": {
        "browser": true,
        "es2021": true,
        "jasmine": true,
        "jquery": true
    },
    "extends": [
        "plugin:fsd/all",
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "fsd",
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": "off",
        "@typescript-eslint/no-unused-vars": [
            "error"
        ],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts"]
            }
        }
    },
    "globals": {
        "JQuery": "readonly"
    },
    "overrides": [
        {
            "files": ["*conf.js"],
            "rules": {
                "func-names": "off",
                "space-before-function-paren": "off",
                "no-multiple-empty-lines": "off",
                "comma-dangle": "off",
                "max-len": "off",
                "semi": "off"
            }
        },
        {
            "files": ["test/**/*.ts"],
            "rules": {
                "no-console": "off",
                "@typescript-eslint/no-unused-vars":  "off"
            }
        }
    ]
}
