include ./blocks/slider-container/slider-container

doctype html

html(lang='en')
  head
    meta(charset='UTF-8')
    title Slider Demo
    meta(name='description' content='Демонстрация работы слайдера')
    meta(name='keywords' content='slider, jquery, демо, demo, слайдер, range')
    meta(name='viewport' content='initial-scale=1.0, width=device-width')

    link(rel='apple-touch-icon' sizes='180x180' href='/favicons/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='/favicons/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='/favicons/favicon-16x16.png')
    link(rel='manifest' href='/favicons/site.webmanifest')
    link(rel='mask-icon' href='/favicons/safari-pinned-tab.svg' color='#5bbad5')
    link(rel='shortcut icon' href='/favicons/favicon.ico')
    meta(name='msapplication-TileColor' content='#2b5797')
    meta(name='msapplication-config' content='/favicons/browserconfig.xml')
    meta(name='theme-color' content='#ffffff')

    link(rel='stylesheet' href='slider.min.css')

  body
    +slider-container({
      sliderName: 'slider1',
      hasConfigOptionsDesc: true,
    }, 'Default options', null)

    +slider-container({ sliderName: 'slider2' }, 'Custom options', {
      value: [2, 84],
      isRange: true,
      stepSize: 1,
      max: 100,
      min: -30,
      length: '200px',
      hasTooltip: true,
      hasValueInfo: true,
      hasScale: true,
      scaleValue: ['start', 'half', 'end'],
      isVertical: true,
      isResponsive: false,
    })

    +slider-container({ sliderName: 'slider3' }, {
      title: 'On change',
      description: 'onChange() { console.log($(\'.js-slider3\').slider(\'value\')) }',
    })

    +slider-container({ sliderName: 'slider4' })

    script(src='https://code.jquery.com/jquery-3.5.1.min.js'
      integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0='
      crossorigin='anonymous')
    script(src='slider.min.js')
    script.
      (function setOnChange($sliderWithOnChange) {
        $sliderWithOnChange.slider('changeOptions', {
          onChange() {
            console.log($sliderWithOnChange.slider('value'))
          }
        });
      })($('.js-slider3'));
