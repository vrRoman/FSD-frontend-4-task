include ./blocks/slider-container/slider-container

doctype html

html(lang='en')
head
  meta(charset='UTF-8')
  title Slider Demo
  link(rel='stylesheet' href='../slider/slider.min.css')

body
  +slider-container({
    sliderName: 'slider1',
    hasConfigOptionsDesc: true,
  }, 'Default options', null)

  +slider-container({ sliderName: 'slider2' }, 'Custom options', {
    value: [2, 84],
    isRange: true,
    stepSize: 1,
    max: 100,
    min: -30,
    length: '200px',
    hasTooltip: true,
    hasValueInfo: true,
    hasScale: true,
    scaleValue: ['start', 'half', 'end'],
    isVertical: true,
    isResponsive: true,
  })

  +slider-container({ sliderName: 'slider3' }, {
    title: 'On change',
    description: 'onChange() { console.log($(\'.js-slider3\').slider(\'value\')) }',
  })

  +slider-container({ sliderName: 'slider4' })

  script(src='https://code.jquery.com/jquery-3.5.1.min.js'
    integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0='
    crossorigin='anonymous')
  script(src='../slider/slider.min.js')
  script(src='demo.js')
  script.
    (function setOnChange($sliderWithOnChange) {
      $sliderWithOnChange.slider('changeOptions', {
        onChange() {
          console.log($sliderWithOnChange.slider('value'))
        }
      });
    })($('.js-slider3'));
