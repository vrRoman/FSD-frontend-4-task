include ../option/option

mixin slider-config(sliderName, hasScaleValueDescription)
  .slider-config.js-slider-config
    +option('isRange', sliderName)
    +option('hasTooltip', sliderName)
    +option('hasScale', sliderName)
    +option('hasValueInfo', sliderName)
    +option('isVertical', sliderName)
    +option('isScaleClickable', sliderName)
    +option('isBarClickable', sliderName)
    +option('useKeyboard', sliderName)

    .slider-config__value
      span.slider-config__value-description value
      +option('value1', sliderName, 'number')
      +option('value2', sliderName, 'number')
    +option('stepSize', sliderName, 'number')
    +option('min', sliderName, 'number')
    +option('max', sliderName, 'number')
    +option('length', sliderName, 'text')
    +option({
      label: 'scaleValue',
      description: hasScaleValueDescription ? 'если массив, вводить значения через запятую' : null,
    }, sliderName, 'text')
