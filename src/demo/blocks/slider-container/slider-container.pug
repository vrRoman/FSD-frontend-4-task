include ../slider-config/slider-config

mixin slider-container(configOptions, heading, sliderOptions)
  -
    let hasScaleValueDescription = false;
    if (configOptions.hasConfigOptionsDescription !== undefined) {
        hasScaleValueDescription = configOptions.hasConfigOptionsDescription;
    }

    let title;
    let description;
    if (heading) {
      title = heading;
      if (typeof heading !== 'string') {
        title = heading.title;
        description = heading.description;
      }
    }

  .slider-container.js-slider-container(data-slider-options=sliderOptions || {})
    if (title)
      h2.slider-container__title= title
    if (description)
      span.slider-container__description= description

    .slider-container__slider
      .slider.js-slider(class=`${configOptions.sliderName} js-${configOptions.sliderName}`)

    .slider-container__config
      +slider-config(configOptions.sliderName, hasScaleValueDescription)
